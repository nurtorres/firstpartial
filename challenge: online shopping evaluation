amount = int(input("Enter the amount of purchase: $"))
if amount > 100:
  print(amount * 0.10)
if amount == 100:
  print (amount * .10)
discount= input("do you have a membership card?")
if discount == "yes":
  print("the total amount to pay is", amount * .05)
if discount == "no":
  print("no aditional discount")
